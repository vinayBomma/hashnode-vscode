{
  "name": "hashnode-on-vscode",
  "displayName": "Hashnode on VSCode",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hashnode-on-vscode.getHashnode",
        "title": "Hey HN"
      },
      {
        "command": "hashnode-on-vscode.addToken",
        "title": "Add Token"
      },
      {
        "command": "hashnode-on-vscode.showUserPanel",
        "title": "Show Panel"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hashnode",
          "title": "Hashnode on VSCode",
          "icon": "$(debug-breakpoint-log-unverified)"
        }
      ]
    },
    "views": {
      "hashnode": [
        {
          "id": "hashnode-on-vscode.blogsList",
          "name": "Blogs",
          "type": "tree",
          "visibility": "visible"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "hashnode-on-vscode.blogsList",
        "contents": "Access Token Not Found! \nToken can be generated from below URL: [https://hashnode.com/settings/developer](https://hashnode.com/settings/developer) \n[Add Hashnode Access Token](command:hashnode-on-vscode.addToken)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "graphql-request": "^6.1.0"
  }
}
