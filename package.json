{
  "name": "hashnode-on-vscode",
  "displayName": "Hashnode on VSCode",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hashnode-on-vscode.getHashnode",
        "title": "Hey HN"
      },
      {
        "command": "hashnode-on-vscode.addToken",
        "title": "Add Token"
      },
      {
        "command": "hashnode-on-vscode.showUserPanel",
        "title": "Show Panel"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hashnode",
          "title": "Hashnode on VSCode",
          "icon": "$(debug-breakpoint-log-unverified)"
        }
      ]
    },
    "views": {
      "hashnode": [
        {
          "id": "notepad.notesList",
          "name": "Blogs",
          "type": "tree",
          "visibility": "visible"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "graphql-request": "^6.1.0"
  }
}
